@model IEnumerable<Abstraction.Models.Portfolio>

@{
    ViewData["Title"] = "Index";
}

<h1>User's Porfolio</h1>

<p>
    <a asp-action="CreateIndex">Create New Portfolio</a>
</p>
<table class="table">
    <thead>
    <th>
            @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>Action</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                @Html.HiddenFor(modelItem => item.Id)

                <td>

                    @Html.ActionLink("ShowItms", "index","Portfolio", new { id=item.Id})

                </td>
            </tr>
        }
    </tbody>
</table>
